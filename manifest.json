{
    "manifest_version": 3,
    "name": "AI-Powered Pomodoro",
    "version": "1.0",
    "description": "Pomodoro technique with AI time allocation, reminders, and motivational content.",
    "permissions": [
        "notifications",
        "alarms",
        "storage",
        "https://*.youtube.com/",
        "identity"
    ],
    "oauth2": {
        "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/gmail.readonly"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}